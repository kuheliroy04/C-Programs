#include <stdio.h>
#include <string.h>
typedef struct {
    int employee_id;
    char name[50];
    float salary;
} Employee;
int main() {
    Employee employees[3];
    int i;
    int highestSalaryIndex = 0;
    for (i = 0; i < 3; i++) {
        printf("Enter details for Employee %d:\n", i + 1);
        printf("Employee ID: ");
        scanf("%d", &employees[i].employee_id);
        while (getchar() != '\n');
        printf("Name: ");
        fgets(employees[i].name, sizeof(employees[i].name), stdin);
        employees[i].name[strcspn(employees[i].name, "\n")] = 0;
        printf("Salary: ");
        scanf("%f", &employees[i].salary);
    }
    for (i = 1; i < 3; i++) {
        if (employees[i].salary > employees[highestSalaryIndex].salary) {
            highestSalaryIndex = i;
        }
    }
    printf("\nEmployee with the highest salary:\n");
    printf("ID: %d\n", employees[highestSalaryIndex].employee_id);
    printf("Name: %s\n", employees[highestSalaryIndex].name);
    printf("Salary: %.2f\n", employees[highestSalaryIndex].salary);
    return 0;
}
