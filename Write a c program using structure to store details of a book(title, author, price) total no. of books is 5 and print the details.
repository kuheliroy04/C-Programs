#include <stdio.h>
struct Book {
    char title[100];
    char author[100];
    float price;
};
int main() {
    struct Book b[5];
    int i;
    printf("Enter details for 5 b:\n");
    for (i = 0; i < 5; i++) {
        printf("\n--- Book %d ---\n", i + 1);

        printf("Enter title: ");
        fgets(b[i].title, sizeof(b[i].title), stdin);
        for(int j = 0; b[i].title[j] != '\0'; j++) {
            if(b[i].title[j] == '\n') {
                b[i].title[j] = '\0';
                break;
            }
        }
        printf("Enter author: ");
        fgets(b[i].author, sizeof(b[i].author), stdin);
        for(int j = 0; b[i].author[j] != '\0'; j++) {
            if(b[i].author[j] == '\n') {
                b[i].author[j] = '\0';
                break;
            }
        }
        printf("Enter price: ");
        scanf("%f", &b[i].price);
        getchar();
    }
    printf("\n--- Details of the 5 books ---\n");
    for (i = 0; i < 5; i++) {
        printf("\nBook %d:\n", i + 1);
        printf("Title: %s\n", b[i].title);
        printf("Author: %s\n", b[i].author);
        printf("Price: %.2f\n", b[i].price);
    }
    return 0;
}
